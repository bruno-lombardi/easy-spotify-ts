{
  "env": {
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:chai-expect/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier",
    "@typescript-eslint",
    "mocha",
    "chai-expect",
    "chai-friendly"
  ],
  "rules": {
    "camelcase": "off",
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "semi": false,
        "printWidth": 80,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ],
    "import/extensions": 0
  }
}
